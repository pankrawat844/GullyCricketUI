<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include"
        layout="@layout/batsmen_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="Yogesh"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/googlesans_italic"
        android:text="Lefty 11"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/player1"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <TextView
        android:id="@+id/player1SR"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="end"
        android:text="333.33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/player16s"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="end"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@+id/player1SR"
        app:layout_constraintEnd_toStartOf="@+id/player1SR"
        app:layout_constraintTop_toTopOf="@+id/player1SR" />

    <TextView
        android:id="@+id/player14S"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="end"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@+id/player16s"
        app:layout_constraintEnd_toStartOf="@+id/player16s"
        app:layout_constraintTop_toTopOf="@+id/player16s" />

    <TextView
        android:id="@+id/player1Ball"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="end"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@+id/player14S"
        app:layout_constraintEnd_toStartOf="@+id/player14S"
        app:layout_constraintTop_toTopOf="@+id/player14S" />

    <TextView
        android:id="@+id/player1Score"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="end"
        android:text="333"
        app:layout_constraintBottom_toBottomOf="@+id/player1Ball"
        app:layout_constraintEnd_toStartOf="@+id/player1Ball"
        app:layout_constraintTop_toTopOf="@+id/player1Ball" />

</androidx.constraintlayout.widget.ConstraintLayout>